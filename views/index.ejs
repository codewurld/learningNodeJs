<!DOCTYPE html>
<html lang="en">


<%- include('../partials/head.ejs') %>

    <body>

        <!-- passing js into ejs -->
        <% const name="Jamiu" %>

            <%- include('../partials/nav.ejs') %>

                <div class="blogs">
                    <h2>All Blogs</h2>

                    <!-- check if blogs length is > 0, for each blog, create header and paragraph -->
                    <% if (blogs.length> 0){ %>
                        <% blogs.forEach(blog=> { %>
                            <!-- wrapping returned values in anchor tag so we can assign ids and get and display each blog by its ID -->
                            <a class="single" href="/blogs/<%= blog._id %>">


                                <h3 class="title">
                                    <%= blog.title %>
                                </h3>
                                <p class="snippet">
                                    <%= blog.snippet %>
                                </p>
                            </a>
                            <% }) %>

                                <% } else { %>
                                    <p>There's nothing to see here Marty...</p>
                                    <% } %>
                </div>

                <%- include('../partials/footer.ejs') %>
    </body>

</html>