<!DOCTYPE html>
<html lang="en">


<%- include('../partials/head.ejs') %>

    <body>

        <!-- passing js into ejs -->
        <% const name="Jamiu" %>

            <%- include('../partials/nav.ejs') %>

                <div class="blogs content">
                    <h2>All Blogs</h2>

                    <!-- check if blogs length is > 0, for each blog, create header and paragraph -->
                    <% if (blogs.length> 0){ %>
                        <% blogs.forEach(blog=> { %>

                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                            <% }) %>

                                <% } else { %>
                                    <p>There's nothing to see here Marty...</p>
                                    <% } %>
                </div>

                <%- include('../partials/footer.ejs') %>
    </body>

</html>